<Window x:Class="GuardianFlash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuardianFlash"
        mc:Ignorable="d"
        Title="Guardian Flash" Height="450.37" Width="600" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Image x:Name="image" Source="Images/app_background.jpg" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="exitButton" Content="Exit" HorizontalAlignment="Left" Margin="150,386,0,0" VerticalAlignment="Top" Width="300" Click="exitButton_Click" BorderThickness="3,1,3,3"/>
        <Button x:Name="manageButton" Content="Manage" HorizontalAlignment="Left" Margin="150,361,0,0" VerticalAlignment="Top" Width="300" Click="manageButton_Click" BorderThickness="3,1"/>
        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Margin="150,336,0,0" VerticalAlignment="Top" Width="300" Click="addButton_Click" BorderThickness="3,1"/>
        <Button x:Name="readButton" Content="Read" HorizontalAlignment="Left" Margin="150,309,0,0" VerticalAlignment="Top" Width="300" Click="readButton_Click" BorderThickness="3,3,3,1"/>

    </Grid>
</Window>
