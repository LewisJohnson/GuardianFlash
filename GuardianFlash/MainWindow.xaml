<Window x:Class="GuardianFlash.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:local="clr-namespace:GuardianFlash"
                mc:Ignorable="d"
                Title="Guardian Flash" Height="450.37" Width="600" ResizeMode="NoResize" WindowStyle="None">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Width" Value="300"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Image x:Name="image" Source="Images/app_background.jpg" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <StackPanel Orientation="Vertical" Margin="0,308,0,0">
            <Button Content="Read" Click="readButton_Click" BorderThickness="3,3,3,1"/>
            <Button Content="Add" Click="addButton_Click" BorderThickness="3,1"/>
            <Button Content="Manage" Click="manageButton_Click" BorderThickness="3,1"/>
            <Button Content="Exit" Click="exitButton_Click" BorderThickness="3,1,3,3"/>
        </StackPanel>
    </Grid>
</Window>